<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F8F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="30dp">
        
        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="〈 返回"
            android:textSize="14sp"
            android:background="@drawable/rounded_button_white"
            android:textColor="#333333"
            android:elevation="1dp"
            android:stateListAnimator="@null"/>
            
        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#4CAF50"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="50dp">

        <TextView
            android:id="@+id/tv_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="42sp"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/tv_remaining"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center"
            android:textAllCaps="false"/>
    </LinearLayout>

    <!-- 使用ScrollView包裹选项区域，解决文本过长被遮挡的问题 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="#000000"
                android:background="@drawable/rounded_button_white"
                android:layout_marginBottom="15dp"
                android:padding="10dp"
                android:minHeight="80dp"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/btn_option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="#000000"
                android:background="@drawable/rounded_button_white"
                android:layout_marginBottom="15dp"
                android:padding="10dp"
                android:minHeight="80dp"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/btn_option3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="#000000"
                android:background="@drawable/rounded_button_white"
                android:layout_marginBottom="15dp"
                android:padding="10dp"
                android:minHeight="80dp"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/btn_option4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="#000000"
                android:background="@drawable/rounded_button_white"
                android:layout_marginBottom="15dp"
                android:padding="10dp"
                android:minHeight="80dp"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- 下一步按钮 -->
    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="下一步"
        android:textSize="18sp"
        android:background="@drawable/rounded_button_primary"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"
        android:visibility="gone"/>

    <!-- 错误覆盖层 -->
    <LinearLayout
        android:id="@+id/error_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">
        
        <TextView
            android:id="@+id/tv_error_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="答错了！"
            android:textSize="24sp"
            android:textColor="#FF5722"
            android:layout_marginBottom="20dp"/>
            
        <TextView
            android:id="@+id/tv_word_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginBottom="15dp"/>
            
        <TextView
            android:id="@+id/tv_correct_definition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#444444"
            android:layout_marginBottom="30dp"/>
            
        <Button
            android:id="@+id/btn_close_overlay"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="下一步"
            android:textSize="18sp"
            android:background="@drawable/rounded_button_green"
            android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>